<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lemon_Bar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LemonBar</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style=" list-style-type: none;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item" style=" list-style-type: none;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Items" asp-action="Index">Inventory Database</a>
                            </li>
                            <li class="nav-item" style=" list-style-type: none;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Items" asp-action="SearchByInventory">Search Recipes By Inventory</a>
                            </li>
                            <li class="nav-item" style=" list-style-type: none;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Items" asp-action="RecipeList">Popular Drinks</a>
                            </li>
                            <li class="nav-item" style=" list-style-type: none;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="DrinkSales" asp-action="Index">Drink Sales</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Lemon_Bar - Created by: &nbsp
    <a href="https://www.linkedin.com/in/wendi-magee/"> Wendi Magee, &nbsp</a>
    <a href="https://www.linkedin.com/in/nathanielsdavis/"> Nathaniel Davis, &nbsp</a>
    <a href="https://www.linkedin.com/in/graceseymore/"> Grace Seymore, &nbsp </a>
    and &nbsp <a href="https://www.linkedin.com/in/jeffreywohlfield/">Jeffrey Wohlfield</a>
</div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
